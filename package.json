{
  "name": "simple_char",
  "homepage": "https://albachteng.github.io/simple_char",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:api": "echo 'API is already JavaScript - no build needed'",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "server": "node src/server.cjs",
    "server:dev": "nodemon src/server.cjs",
    "start": "node src/server.cjs",
    "db:test": "node scripts/test-db-connection.cjs",
    "db:diagnose": "node scripts/network-diagnostic.cjs",
    "db:tcp-test": "node scripts/simple-connection-test.cjs",
    "db:create": "node scripts/create-database.cjs",
    "db:debug": "node scripts/debug-knex-config.cjs",
    "db:test-migration": "node scripts/test-migration-connection.cjs",
    "db:trace": "node scripts/trace-knex-migration.cjs",
    "db:fix": "node scripts/fix-knex-migration.cjs",
    "db:check": "node scripts/check-database-data.cjs",
    "db:debug-migrations": "node scripts/debug-migrations.cjs",
    "db:view": "node scripts/view-table.cjs",
    "db:query": "node scripts/query.cjs",
    "db:debug-connection": "node debug-connection.cjs",
    "db:migrate": "node migrate.cjs",
    "db:migrate:shell": "./migrate.sh",
    "db:migrate:cli": "ts-node ./node_modules/knex/bin/cli.js migrate:latest --knexfile knexfile.cjs",
    "db:migrate:rollback": "knex migrate:rollback --knexfile knexfile.cjs",
    "db:migrate:make": "knex migrate:make --knexfile knexfile.cjs",
    "db:seed": "knex seed:run --knexfile knexfile.cjs",
    "db:seed:make": "knex seed:make --knexfile knexfile.cjs",
    "db:reset": "knex migrate:rollback:all --knexfile knexfile.cjs && knex migrate:latest --knexfile knexfile.cjs && knex seed:run --knexfile knexfile.cjs"
  },
  "dependencies": {
    "@emotion/react": "^11.13.5",
    "@emotion/styled": "^11.13.5",
    "@mantine/core": "^7.14.3",
    "@mantine/hooks": "^7.14.3",
    "@tabler/icons-react": "^3.34.0",
    "@types/bcryptjs": "^3.0.0",
    "@types/compression": "^1.7.7",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "mitt": "^3.0.1",
    "pg": "^8.16.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "gh-pages": "^6.3.0",
    "globals": "^15.12.0",
    "jsdom": "^26.1.0",
    "knex": "^3.1.0",
    "node-pg-migrate": "^8.0.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.15.0",
    "vite": "^6.0.1",
    "vitest": "^3.2.4"
  }
}
