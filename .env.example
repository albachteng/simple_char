# Database Configuration for AWS RDS
# Copy this file to .env and fill in your actual values

# IMPORTANT: RDS Instance Name vs Database Name
# - RDS Instance Name: simple-char-db-instance-1 (the AWS resource)
# - Database Name: simple_char (the PostgreSQL database inside the instance)
# Use the DATABASE_NAME below, NOT the RDS instance name!

# Option 1: Use DATABASE_URL (PostgreSQL connection string)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.region.rds.amazonaws.com:5432/database_name

# Option 2: Use individual database parameters
DATABASE_HOST=your-rds-endpoint.region.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=simple_char
DATABASE_USER=your_master_username
DATABASE_PASSWORD=your_master_password
DATABASE_SSL=true

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRY=7d
BCRYPT_SALT_ROUNDS=12

# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info

# Example AWS RDS values (replace with your actual values):
# DATABASE_HOST=simple-char-db-instance-1.c9akrhbmxyz.us-east-1.rds.amazonaws.com
# DATABASE_PORT=5432
# DATABASE_NAME=simple_char  ← This is the database name INSIDE the RDS instance
# DATABASE_USER=postgres     ← This is your RDS master username
# DATABASE_PASSWORD=mySecurePassword123
# DATABASE_SSL=true

# Note: Your RDS endpoint will look like:
# <instance-name>.<random-id>.<region>.rds.amazonaws.com